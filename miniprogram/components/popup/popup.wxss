.mc-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000000;
  opacity: 0.65;
  z-index: 1000;
}

.mc-popup {
  position: fixed;
  z-index:1001;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #FFF;
  padding: 20rpx;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  transform: translate(0, 100%);
  transition: transform .3s;
}

.mc-popup-toggle {
  transform: translate(0, 0)
}

.header {
  font-size: 28rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-weight: 700;
}


.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.content__title {
  font-size: 34rpx;
  font-weight: 700;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #e9e9e9;
}

.content__btn {
  padding: 20rpx;
  padding-bottom: 0;
}