.qrcode {
  padding: 40rpx;
}

.qrcode__pic {
  position: relative;
}

.qrcode__pic-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-weight: 700;
}

.qrcode__info {
  margin: 20rpx 0;
}

.qrcode__info__list {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
}

.qrcode__info__list-title {
  width: 200rpx;
  color: #666;
}

