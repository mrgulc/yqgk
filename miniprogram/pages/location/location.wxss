.location {
  background-color: #f5f5f5;
  box-sizing: border-box;
  height: 100vh;
  padding: 20rpx;
  display: flex;
  position: relative;
  flex-direction: column;
}

.location__scroll {
    flex: 1;
    overflow: hidden;
    margin-top: 20rpx;
}
.location__scroll__view {
  height: 100%;
}

.location__ipt {
  background: #fff;
  font-size: 26rpx;
  padding: 10rpx 40rpx;
  position: relative;
}

.location__poi {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  padding: 20rpx;
  background-color: #FFF;
}

.location__poi-title {
  font-size: 34rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.location__poi-address {
  font-size: 28rpx;
  color: #9a9a9a; 
}

